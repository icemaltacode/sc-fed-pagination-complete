{
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended",
        "plugin:react/jsx-runtime"
    ],
    "parserOptions": { 
        "sourceType": "module", 
        "ecmaVersion": "latest"
    },
    "settings": {
        "react": {
            "version": "detect"
        }
    },
    "rules": {
        "semi": ["error", "always"],
        "quotes": ["error", "single"],
        "jsx-quotes": ["error", "prefer-single"]
    }
}
